<h1>Заполнение заявки на сотрудничество</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@partner) do |f| %>

          <%= render 'shared/error_messages' %>

          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>

          <%= f.label :site %>,
          <%= f.text_field :site, class: 'form-control' %>

          <%= f.label :inn %>
          <%= f.text_field :inn, class: 'form-control' %>

          <%= f.label :city %>
          <%= f.text_field :city, class: 'form-control'%>

          <%= f.label :address %>
          <%= f.text_field :address, class: 'form-control' %>

          <%= f.label :yml_link %>
          <%= f.text_field :yml_link, class: 'form-control' %>

          <%= f.label :phone %>
          <%= f.text_field :phone, class: 'form-control' %>

          <%= f.label :emp_name %>
          <%= f.text_field :emp_name, class: 'form-control' %>

          <%= f.label :emp_email %>
          <%= f.email_field :emp_email, class: 'form-control' %>

          <%= f.label :emp_phone %>
          <%= f.text_field :emp_phone, class: 'form-control' %>

          <%= f.submit "Подтвердить", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>